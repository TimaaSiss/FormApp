generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String?
  role      String   @default("user")
  createdAt DateTime @default(now())
}

model FormResponse {
  id Int @id @default(autoincrement())

  nomProjet          String?
  entreprise         String?
  secteurActivite    String?
  contactNom         String?
  contactFonction    String?
  email              String?
  telephone          String?
  dateLancement      DateTime?
  descriptionProjet  String?
  problemeResoudre   String?
  utilisateursCibles String?
  nombreUtilisateurs String?

  fonctionnalitesPrincipales    Json?
  fonctionnalitePrincipaleAutre String?
  typeApplication               Json?
  styleVisuel                   Json?
  styleAutre                    String?
  budget                        String?
  delaiRealisation              String?
  commentaires                  String?

  createdAt DateTime @default(now())
}
