generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String?
  role      String   @default("user")
  createdAt DateTime @default(now())
}

model FormResponse {
  id               Int       @id @default(autoincrement())
  nomProjet        String?
  contactNom       String?
  contactFonction  String?
  email            String?
  telephone        String?
  siteWeb          String?
  dateMiseEnLigne  DateTime?
  evenementAssocie String?

  objectifs   String[]
  publicCible String?

  pages             String[]
  contenuDisponible String?
  pagesAMettreJour  Boolean?

  fonctionnalites    String[]
  typesProduits      String[]
  nbProduits         String?
  besoinsSpecifiques String[]

  webMobile String[] // ou "webMobile"

  stylePrefere String[]

  gestionPlateforme Boolean?
  hebergement       String?
  connexionOutils   String?

  respectRGPD     String?
  sauvegardesAuto String?

  besoinsSupport String[]
  budget         String?
  paiement       String?
  appelOffre     String?

  communityManagement String[]
  plateformes         String[]
  besoinsComm         String[]
  strategieExistante  String?

  referencement     String[]
  accompagnementSEO String[]

  gestionEReputation String?
  actionsAvis        String[]

  remarques String?

  createdAt DateTime @default(now())
}
