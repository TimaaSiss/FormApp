generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String?
  role      String   @default("user")
  createdAt DateTime @default(now())
}

model FormResponse {
  id               Int       @id @default(autoincrement())
  nomProjet        String?
  contactNom       String?
  contactFonction  String?
  email            String?
  telephone        String?
  siteWeb          String?
  dateMiseEnLigne  DateTime?
  evenementAssocie String?

  objectifs   Json?
  publicCible String?

  pages             Json?
  contenuDisponible String?
  pagesAMettreJour  Boolean?

  fonctionnalites    Json?
  typesProduits      Json?
  nbProduits         String?
  besoinsSpecifiques Json?

  webMobile Json?

  stylePrefere Json?

  gestionPlateforme Boolean?
  hebergement       String?
  connexionOutils   String?

  respectRGPD     String?
  sauvegardesAuto String?

  besoinsSupport Json?
  budget         String?
  paiement       String?
  appelOffre     String?

  communityManagement Json?
  plateformes         Json?
  besoinsComm         Json?
  strategieExistante  String?

  referencement     Json?
  accompagnementSEO Json?

  gestionEReputation String?
  actionsAvis        Json?

  remarques String?

  createdAt DateTime @default(now())
}
